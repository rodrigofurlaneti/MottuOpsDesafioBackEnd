@model IEnumerable<MottuOpsDesafioBackEnd.Domain.Models.UserProfileModel>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col" class="text-center">Nome</th>
            <th scope="col" class="text-center"></th>
            <th scope="col" class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.ProfileName</td>
                    <td class="text-center">
                        <a id="atualizar" name="atualizar" class="btn btn-warning text-center btn-sm" asp-area="" asp-controller="Profile" asp-action="GetById" asp-route-id="@item.Id">Atualizar</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-danger text-center btn-sm" asp-area="" asp-controller="Profile" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <h5>Falta banco de dados!</h5>
        }
    </tbody>
</table>

<h6>Total de perfis de usuário cadastrados: @Model.Count()</h6>

<a class="btn btn-secondary btn-sm" href="@Url.Action("Index", "Authentication")">
    Voltar
</a>